<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.yrom.screenrecorder">

    <application
        android:name=".Mapp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/AppTheme.NoActionBar">

        <activity
            android:name="net.yrom.screenrecorder.ui.MainActivity"
            android:configChanges="screenLayout|orientation|screenSize"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="net.yrom.screenrecorder.ui.ScreenRecorderActivity"
            android:configChanges="screenLayout|orientation|screenSize" />

        <activity
            android:name="net.yrom.screenrecorder.ui.ScreenRecorder2Activity"
            android:configChanges="screenLayout|orientation|screenSize" />

        <activity
            android:name="net.yrom.screenrecorder.ui.ScreenRecorder3Activity"
            android:configChanges="screenLayout|orientation|screenSize" />

    </application>

</manifest>